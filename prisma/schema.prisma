generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  email     String    @unique
  name      String
  password  String
  createdAt DateTime
  addresses Address[]
}

model Address {
  id          String   @id
  postalCode  String
  houseNumber Int
  description String?
  createdAt   DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}
